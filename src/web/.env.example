# API Configuration
# Base URL for backend API endpoints
# Required: true
# Security: Must use HTTPS in production environments
VITE_API_BASE_URL=http://localhost:8000

# WebSocket Configuration
# Base URL for real-time WebSocket connections
# Required: true
# Security: Must use WSS (WebSocket Secure) in production environments
VITE_WS_BASE_URL=ws://localhost:8000/ws

# Application Metadata
# Application name used throughout the UI and browser title
# Required: true
VITE_APP_NAME=AI Detection Platform

# Application version for compatibility and display
# Required: true
# Format: Semantic versioning (major.minor.patch)
VITE_APP_VERSION=1.0.0

# Environment Configuration
# Determines environment-specific behavior and feature flags
# Required: true
# Allowed values: development, staging, production
VITE_APP_ENV=development

# Analytics Configuration
# Enable/disable user behavior tracking and analytics
# Required: false
# Security: Ensure GDPR and privacy regulation compliance
# Default: false
VITE_ENABLE_ANALYTICS=false

# Error Tracking Configuration
# Enable/disable Sentry error tracking and monitoring
# Required: false
# Security: Ensure no sensitive data is included in error reports
# Default: false
VITE_ENABLE_SENTRY=false

# Production Environment Example Values:
# VITE_API_BASE_URL=https://api.detection-platform.com
# VITE_WS_BASE_URL=wss://api.detection-platform.com/ws
# VITE_APP_ENV=production
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_SENTRY=true

# Staging Environment Example Values:
# VITE_API_BASE_URL=https://staging-api.detection-platform.com
# VITE_WS_BASE_URL=wss://staging-api.detection-platform.com/ws
# VITE_APP_ENV=staging
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_SENTRY=true